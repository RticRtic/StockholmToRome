<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastChanceItaly">

    <TextView
        android:id="@+id/lastchanceItTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="272dp"
        android:layout_height="197dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/italy_flag" />

    <Button
        android:id="@+id/answerButtonLci1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastchanceItTv" />

    <Button
        android:id="@+id/answerButtonLci2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonLci1"
        tools:layout_editor_absoluteX="144dp" />

    <Button
        android:id="@+id/answerButtonLci3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonLci2"
        tools:layout_editor_absoluteX="144dp" />

    <Button
        android:id="@+id/answerButtonLci4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonLci3"
        tools:layout_editor_absoluteX="135dp" />
</androidx.constraintlayout.widget.ConstraintLayout>