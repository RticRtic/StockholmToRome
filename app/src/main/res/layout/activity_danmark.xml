<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Danmark">

    <ImageView
        android:id="@+id/danmarkFlagIv"
        android:layout_width="190dp"
        android:layout_height="248dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/danmark_flagga" />

    <TextView
        android:id="@+id/userSeeQuestionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danmarkFlagIv" />

    <Button
        android:id="@+id/answerButtonDk4"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonDk3"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/answerButtonDk1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:insetLeft="0dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/userSeeQuestionTv"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/answerButtonDk2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonDk1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/answerButtonDk3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/answerButtonDk2"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>